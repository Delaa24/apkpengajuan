<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7F000000" /> <!-- Warna shadow -->
            <corners android:radius="8dp" /> <!-- Sudut-sudut -->
        </shape>
    </item>
    <!-- Button background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Warna latar belakang -->
            <stroke
                android:width="2dp"
            android:color="#FF0000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
